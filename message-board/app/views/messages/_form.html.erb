<% #部分テンプレート pertial %>
<%= form_for(@message) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <form class="form-horizontal">
    <% #名前 %>
    <div class="form-group">
      <label for="name" class="col-sm-1 control-label">名前：</label>
      <div class="col-sm-2">
        <%= f.text_field :name, :class => "form-control", :id => "name", :placeholder => "名前" %>
      </div>
    </div>
    <div class="clearfix"></div>

    <% #年齢 %>
    <div class="form-group">
      <label for="age" class="col-sm-1 control-label">年齢：</label>
      <div class="col-sm-2">
        <%= f.text_field :age, :class => "form-control", :id => "age", :placeholder => "年齢" %>
      </div>
    </div>
    <div class="clearfix"></div>
    
    <% #内容 %>
    <div class="form-group">
      <label for="body" class="col-sm-1 control-label">内容：</label>
      <div class="col-sm-11">
        <%= f.text_area :body, :class => "form-control", :rows => "3", :id => "body", :placeholder => "内容" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </form>
<% end %>